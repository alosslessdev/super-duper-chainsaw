{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Gestión de Tareas",
    "version": "1.0.0",
    "description": "API para la gestión de usuarios y tareas, incluyendo integración con un servicio de IA para procesamiento de documentos."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor de desarrollo"
    },
    {
      "url": "http://0.0.0.0:8080",
      "description": "Servidor de producción"
    }
  ],
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "connect.sid",
        "description": "Autenticación basada en sesión a través de cookies."
      }
    },
    "schemas": {
      "UsuarioRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Correo electrónico del usuario."
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Contraseña del usuario."
          }
        },
        "required": [
          "email",
          "password"
        ],
        "example": {
          "email": "usuario@example.com",
          "password": "password123"
        }
      },
      "UsuarioResponse": {
        "type": "object",
        "properties": {
          "pk": {
            "type": "integer",
            "description": "ID único del usuario."
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Correo electrónico del usuario."
          }
        },
        "example": {
          "pk": 1,
          "email": "usuario@example.com"
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "mensaje": {
            "type": "string",
            "description": "Mensaje de éxito del inicio de sesión."
          },
          "usuario": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "description": "ID del usuario logueado."
              },
              "email": {
                "type": "string",
                "format": "email",
                "description": "Correo electrónico del usuario logueado."
              }
            }
          },
          "secretKeyId": {
            "type": "string",
            "description": "ID de la clave secreta de AWS S3."
          },
          "secretKey": {
            "type": "string",
            "description": "Clave secreta de AWS S3."
          }
        },
        "example": {
          "mensaje": "Inicio de sesión exitoso",
          "usuario": {
            "id": 1,
            "email": "usuario@example.com"
          },
          "secretKeyId": "AKIAIOSFODNN7EXAMPLE",
          "secretKey": "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY"
        }
      },
      "TareaRequest": {
        "type": "object",
        "properties": {
          "fecha_inicio": {
            "type": "string",
            "format": "date",
            "description": "Fecha de inicio de la tarea (YYYY-MM-DD)."
          },
          "fecha_fin": {
            "type": "string",
            "format": "date",
            "description": "Fecha de fin de la tarea (YYYY-MM-DD)."
          },
          "descripcion": {
            "type": "string",
            "description": "Descripción detallada de la tarea."
          },
          "prioridad": {
            "type": "string",
            "description": "Prioridad de la tarea (ej. 'Alta', 'Media', 'Baja')."
          },
          "titulo": {
            "type": "string",
            "description": "Título de la tarea."
          }
        },
        "required": [
          "fecha_inicio",
          "fecha_fin",
          "descripcion",
          "prioridad",
          "titulo"
        ],
        "example": {
          "fecha_inicio": "2024-07-29",
          "fecha_fin": "2024-07-30",
          "descripcion": "Completar el informe trimestral.",
          "prioridad": "Alta",
          "titulo": "Informe Q3"
        }
      },
      "TareaResponse": {
        "type": "object",
        "properties": {
          "pk": {
            "type": "integer",
            "description": "ID único de la tarea."
          },
          "fecha_inicio": {
            "type": "string",
            "format": "date",
            "description": "Fecha de inicio de la tarea (YYYY-MM-DD)."
          },
          "fecha_fin": {
            "type": "string",
            "format": "date",
            "description": "Fecha de fin de la tarea (YYYY-MM-DD)."
          },
          "descripcion": {
            "type": "string",
            "description": "Descripción detallada de la tarea."
          },
          "prioridad": {
            "type": "string",
            "description": "Prioridad de la tarea (ej. 'Alta', 'Media', 'Baja')."
          },
          "titulo": {
            "type": "string",
            "description": "Título de la tarea."
          },
          "usuario": {
            "type": "integer",
            "description": "ID del usuario al que pertenece la tarea."
          },
          "tiempo_estimado": {
            "type": "string",
            "nullable": true,
            "description": "Tiempo estimado para la tarea (ej. '2 días')."
          },
          "horas": {
            "type": "integer",
            "nullable": true,
            "description": "Horas estimadas para la tarea."
          }
        },
        "example": {
          "pk": 1,
          "fecha_inicio": "2024-07-29",
          "fecha_fin": "2024-07-30",
          "descripcion": "Completar el informe trimestral.",
          "prioridad": "Alta",
          "titulo": "Informe Q3",
          "usuario": 1,
          "tiempo_estimado": "2 días",
          "horas": 16
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Mensaje de error."
          }
        },
        "example": {
          "error": "No autorizado. Inicia sesión primero."
        }
      },
      "TareasIA_Request": {
        "type": "object",
        "properties": {
          "pdf_url": {
            "type": "string",
            "format": "url",
            "description": "URL del archivo PDF a procesar por la IA."
          },
          "question": {
            "type": "string",
            "description": "Pregunta o instrucción para la IA sobre el contenido del PDF."
          }
        },
        "required": [
          "question"
        ],
        "example": {
          "pdf_url": "https://example.com/documento.pdf",
          "question": "¿Cuáles son las tareas principales mencionadas en este documento?"
        }
      },
      "TareasIA_ProcessedTask": {
        "type": "object",
        "properties": {
          "tarea": {
            "type": "string",
            "description": "Descripción de la tarea extraída."
          },
          "tiempoEstimado": {
            "type": "string",
            "nullable": true,
            "description": "Tiempo estimado para la tarea."
          },
          "horas": {
            "type": "integer",
            "nullable": true,
            "description": "Horas estimadas para la tarea."
          },
          "insertId": {
            "type": "integer",
            "nullable": true,
            "description": "ID de la tarea insertada en la base de datos (si fue exitosa)."
          },
          "error": {
            "type": "string",
            "nullable": true,
            "description": "Mensaje de error si la inserción falló."
          }
        },
        "example": {
          "tarea": "Revisar el capítulo 3 del libro",
          "tiempoEstimado": "1 día",
          "horas": 8,
          "insertId": 5
        }
      },
      "TareasIA_Response": {
        "type": "object",
        "properties": {
          "tareasProcesadas": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TareasIA_ProcessedTask"
            },
            "description": "Lista de tareas procesadas por la IA y sus resultados de inserción."
          }
        },
        "example": {
          "tareasProcesadas": [
            {
              "tarea": "Revisar el capítulo 3 del libro",
              "tiempoEstimado": "1 día",
              "horas": 8,
              "insertId": 5
            },
            {
              "tarea": "Preparar presentación para el viernes",
              "tiempoEstimado": "2 días",
              "horas": 16,
              "insertId": 6
            }
          ]
        }
      }
    }
  },
  "paths": {
    "/usuarios": {
      "post": {
        "summary": "Crear un nuevo usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario creado exitosamente.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UsuarioResponse"
                }
              }
            }
          },
          "400": {
            "description": "Solicitud inválida. Email y contraseña son requeridos.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Iniciar sesión de usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "schema": {
                  "type": "string",
                  "example": "connect.sid=s%3A...; Path=/; HttpOnly"
                },
                "description": "Cookie de sesión."
              }
            }
          },
          "400": {
            "description": "Solicitud inválida. Email y contraseña requeridos.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado. Usuario no encontrado o contraseña incorrecta.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/logout": {
      "post": {
        "summary": "Cerrar sesión de usuario",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Sesión cerrada exitosamente.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mensaje": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "mensaje": "Sesión cerrada"
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "schema": {
                  "type": "string",
                  "example": "connect.sid=; Path=/; Expires=Thu, 01 Jan 1970 00:00:00 GMT"
                },
                "description": "Elimina la cookie de sesión."
              }
            }
          },
          "401": {
            "description": "No autorizado. No hay sesión activa.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/tareas/de/{usuario}": {
      "get": {
        "summary": "Obtener todas las tareas de un usuario",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "usuario",
            "in": "path",
            "required": true,
            "description": "ID del usuario cuyas tareas se desean obtener.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de tareas del usuario.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TareaResponse"
                  }
                }
              }
            }
          },
          "401": {
            "description": "No autorizado. Inicia sesión primero.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Prohibido. Solo puedes acceder a tus propias tareas.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/tareas/por/{id}": {
      "get": {
        "summary": "Obtener una tarea por su ID",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID de la tarea a obtener.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalles de la tarea.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TareaResponse"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado. Inicia sesión primero.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Prohibido. Solo puedes acceder a tus propias tareas.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Tarea no encontrada.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/tareas": {
      "post": {
        "summary": "Crear una nueva tarea",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TareaRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tarea creada exitosamente.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TareaResponse"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado. Inicia sesión primero.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Actualizar una tarea existente",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID de la tarea a actualizar.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TareaRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tarea actualizada exitosamente.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mensaje": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "mensaje": "Tarea actualizada"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado. Inicia sesión primero.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Prohibido. Solo puedes modificar tus propias tareas.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Tarea no encontrada.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/tareas/{id}": {
      "delete": {
        "summary": "Eliminar una tarea por su ID",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID de la tarea a eliminar.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarea eliminada exitosamente.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mensaje": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "mensaje": "Tarea eliminada"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado. Inicia sesión primero.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Prohibido. Solo puedes eliminar tus propias tareas.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Tarea no encontrada.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/tareas/ia": {
      "post": {
        "summary": "Procesar documento con IA y crear tareas",
        "description": "Envía un PDF y una pregunta a un servicio de IA para extraer y crear tareas en la base de datos.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TareasIA_Request"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tareas procesadas y posiblemente insertadas exitosamente.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TareasIA_Response"
                }
              }
            }
          },
          "400": {
            "description": "La respuesta de la IA no contiene ninguna tarea o solicitud inválida.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado. Inicia sesión primero.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "No se encontró ninguna tarea para procesar.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error al procesar la solicitud o error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  }
}
